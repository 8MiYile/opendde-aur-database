build() {
	cd "$srcdir/${pkgname#agb-armv4t-eabi-}-${_symver}-$pkgver"

	if [ "$(uname -s)" = 'Darwin' ]; then
		_make=gmake
		_cores=$(($(sysctl -n hw.ncpu) * 2))
	else
		_make=make
		_cores=$(($(nproc) * 2))
	fi

	for _subproj in ${_subprojects}; do
		cd "${_subproj}"
		${_make} -j${_cores} release TP=GBA
		cd ..
	done
}
