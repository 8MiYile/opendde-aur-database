prepare() {
	cd "$srcdir/$pkgname-$pkgver"

        # Fix error build:
        #patch -p1 <../shaper.patch
        
        sed -i 's|RUNTIME DESTINATION sbin|RUNTIME DESTINATION bin|' \
		"accel-pppd/CMakeLists.txt"

	if [ -d "build" ]; then
		rm -fr "build"
		mkdir "build"
	else
		mkdir "build"
	fi
}
