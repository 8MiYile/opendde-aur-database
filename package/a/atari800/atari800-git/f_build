build() {
    cd "${_pkgname}"

    ./autogen.sh

    # configure default - neccessary
    COPTS="--prefix=/usr"

    # The R: Network device
    COPTS="${COPTS} --enable-riodevice"

    # SIO Sound for true retro feeling
    COPTS="${COPTS} --enable-seriosound"

    # OnScreen Keyboard
    COPTS="${COPTS} --enable-onscreenkeyboard"

    ./configure ${COPTS}
    make
}
