prepare() {
  cd "$srcdir/$_pkgname-$pkgver"
  rm -fr default_theme
  mkdir default_theme
  cd default_theme
  cp -s ../themes/classic/* .
  rm -f month.xpm
  cp -s ../languages/english/month.xpm .
  for f in *.xpm ; do
    sed -e 's,^static ,,' -i $f
  done
  cd ..
  sed -e 's,share/asclock/,share/asclock/themes/,' -i config.c
  xmkmf
}
