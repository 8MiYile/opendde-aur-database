build() {
	cd "$srcdir/${pkgname%-VCS}"
   if test "$CARCH" == i686 ;
      then
      SPEC="linux-g++-32"
   else
      if test "$CARCH" == x86_64
      then
         SPEC="linux-g++-64"
      else
         echo "unknown architecture"
         exit 1
      fi
   fi

   BUILD="$srcdir/build"
   mkdir -p "$BUILD"
   cd "$BUILD"
   lrelease-qt5 "$srcdir/${pkgname%-VCS}/ardoise.pro"
   qmake-qt5 "$srcdir/${pkgname%-VCS}/ardoise.pro" -r -spec $SPEC
   make -w
}
