build() {
  cd "${srcdir}/gcc-${pkgver}"

  echo ${pkgver} > gcc/BASE-VER

  mkdir -p gcc-build
  cd gcc-build

  [ $NOEXTRACT -eq 1 ] || ../configure \
    --prefix=/usr \
    --target=${_target} \
    --host=$CHOST \
    --build=$CHOST \
    --disable-shared \
    --disable-nls \
    --disable-threads \
    --enable-languages=c \
    --disable-multilib \
    --with-sysroot=/usr/${_target} \
    --with-local-prefix=/usr/${_target} \
    --with-newlib \
    --with-arch=armv7-a \
    --with-cpu=cortex-a9 \
    --with-float=softfp \
    --with-fpu=vfp \
    --with-specs='%{save-temps: -fverbose-asm} %{funwind-tables|fno-unwind-tables|mabi=*|ffreestanding|nostdlib:;:-funwind-tables}' \
    --with-pkgversion='GCC for FRC' \
    --disable-multiarch \
    --disable-libssp \
    --disable-libgomp \
    --disable-libmudflap

  make all-gcc all-target-libgcc
}
