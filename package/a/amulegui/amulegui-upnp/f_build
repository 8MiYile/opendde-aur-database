build() {
  cmake -B build -S aMule-SVN-r${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_ALC=OFF \
    -DBUILD_ALCC=OFF \
    -DBUILD_AMULECMD=OFF \
    -DBUILD_CAS=OFF \
    -DBUILD_DAEMON=OFF \
    -DBUILD_REMOTEGUI=ON \
    -DBUILD_WEBSERVER=OFF \
    -DBUILD_WXCAS=OFF \
    -DBUILD_FILEVIEW=OFF \
    -DBUILD_MONOLITHIC=OFF \
    -DBUILD_ED2K=OFF \
    -DENABLE_NLS=ON
  cmake --build build
}
