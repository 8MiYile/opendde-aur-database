build() {
	cd "$srcbuild"
	
	nativefier \
                              --name "Airdroid" \
                              --width "800px" \
                              --height "600px" \
                              --browserwindow-options '{ "webPreferences": { "spellcheck": true } }' \
                              --verbose \
                              --single-instance \
                              "https://web.airdroid.com/"

}
