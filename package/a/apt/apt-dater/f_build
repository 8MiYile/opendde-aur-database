build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-rpath \
    --enable-debug \
    --enable-xmlreport \
    --enable-autoref \
    --enable-history \
    --enable-clusters \
    --enable-tclfilter \
    --enable-tmux
  make
}
