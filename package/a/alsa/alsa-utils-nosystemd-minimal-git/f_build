build() {
  cd alsa-utils
  ./configure --prefix=/usr \
              --disable-alsaconf \
              --sbindir=/usr/bin \
              --with-udev-rules-dir=/usr/lib/udev/rules.d \
	      --disable-alsabat-backend-tiny \
	      --disable-bat \
	      --disable-xmlto \
	      --disable-rst2man
  make
}
