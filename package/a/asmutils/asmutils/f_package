package() {
  cd "$srcdir/$pkgname-$pkgver"
  find . -name "*.asm" -delete
  find . -name "*.o" -delete
  find . -name "*.h" -delete
  find . -name "*.c" -delete
  find . -name "Makefile" -delete

  mkdir -p "$pkgdir"/opt/asmutils/{bin,lib,doc}
  cp -ar src/* "$pkgdir"/opt/asmutils/bin/
  cp -ar lib "$pkgdir"/opt/asmutils/
  cp -ar doc "$pkgdir"/opt/asmutils/
}
