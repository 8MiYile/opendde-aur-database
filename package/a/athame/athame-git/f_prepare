prepare() {
  pushd $_pkgname
  git submodule init
  git submodule update
  popd
  cd $_readline
  sed -i 's|-Wl,-rpath,$(libdir) ||g' support/shobj-conf
  for f in ../readline63-*
  do
    patch -p0 < $f
  done
  patch -p1 < ../$_pkgname/readline.patch
  cp -r ../$_pkgname/vimbed .
  cp ../$_pkgname/athame.* .
  cp ../$_pkgname/athame_readline.h athame_intermediary.h
}
