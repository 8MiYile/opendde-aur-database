package() {
  # shellcheck disable=SC2154
  local _dest="${pkgdir}/usr/share/${_distro}"
  local _profile="${srcdir}/${_pkgbase}/${_profile}"
  cd "${_profile}" || exit

  mkdir work
  ./build_repo.sh fakepkg
  install -d -m 0755 -- "${_dest}"
  pkexec mkarchiso -v \
	           -o "${_dest}" \
		   -w "${_profile}/work" \
                      "${_profile}"
}
