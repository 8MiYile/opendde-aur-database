build() {
	export GOPATH="$srcdir"/gopath
	cd "$GOPATH"/src/github.com/arduino/arduino-builder
	
	go build \
		-buildmode=pie \
		-gcflags "all=-trimpath=$GOPATH" \
		-asmflags "all=-trimpath=$GOPATH" \
		-ldflags "-extldflags $LDFLAGS" \
		-gccgoflags "$CFLAGS $LDFLAGS" \
		-v .

	chmod -R 744 "$GOPATH"
}
