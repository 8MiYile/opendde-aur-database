prepare() {
    cd $_pkgname

    # python2 fix
    sed -i 's_#!/usr/bin/env python_#!/usr/bin/env python2_' \
        a2x.py \
        asciidoc.py \
        asciidocapi.py \
        filters/code/code-filter.py \
        filters/graphviz/graphviz2png.py \
        filters/latex/latex2img.py \
        filters/music/music2png.py
    sed -i 's_python a2x.py_./a2x.py_' \
        Makefile.in
}
