build_maia-theme() {

    cd "adapta-maia-theme-${pkgver}"
    msg "Apply Maia theme"

    find . -type f -name '*.*' -exec sed -i \
      "s/#00BCD4/#16a085/Ig" {} \;
    
    _adapta-var

    ./autogen.sh --prefix "${pkgdir}/usr" \
      --enable-plank \
      --enable-telegram \
      --enable-parallel
      #--enable-gtk_next --with-selection_color=#16A085 --with-second_selection_color=#16A085
    make
}
