build_black-breath-theme() {
    cd "adapta-black-breath-theme-${pkgver}"
    msg "Apply Black Breath theme"

    find . -type f -name '*.*' -exec sed -i \
      "s/#00BCD4/#1abc9c/Ig;\
      s/#009688/#1abc9c/Ig;\
      s/#4DB6AC/#2fe2bf/Ig" {} \;

    _adapta-black

    ./autogen.sh --prefix "${pkgdir}/usr" \
      --enable-plank \
      --enable-telegram \
      --enable-parallel #--enable-gtk_next
    make
}
