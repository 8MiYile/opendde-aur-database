package() {
    cd "$srcdir"
    pushd "Agda-nightly"
    pushd bin
    find ./ -type f -exec install -Dm755 {} "${pkgdir}/usr/bin/{}" \;
    popd
    pushd data
    find ./ -type f -exec install -Dm600 {} "${pkgdir}/usr/share/agda/{}" \;
    popd
    popd
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/agda/LICENSE"
}
