build() {
	cd linux-$version/
	make mrproper
	cp /usr/lib/modules/$(uname -r)/build/.config ./
	cp /usr/lib/modules/$(uname -r)/build/Module.symvers ./
	make oldconfig

	make EXTRAVERSION=$(uname -r | sed -e 's/[[:digit:]]\.[[:digit:]][[:digit:]]*\.*[[:digit:]]*//g' -e 's/-ARCH//g') modules_prepare

	make M=drivers/bluetooth	
}
