pkgver() {
  cd "${srcdir}/${_pkgname}"
  _date="$(git log -1 --format=%cd --date=format:%Y%m%d)"
  _hash="$(git rev-parse --short HEAD)"
  _ver="$(git rev-list HEAD --count --no-merges)"
  if [ -z ${_ver} ]; then
    error "Could not determine version."
    exit 1
  else
    printf '%s' "${_ver}_${_date}.${_hash}"
  fi
}
