package() {

    _extractdir="${srcdir}/aeskulap-${_majorver}-${_minorver}"

    cd "${_extractdir}" || return 20

    make DESTDIR="${pkgdir}" install || return "$?"

    if [ "${_instdir}"x != "/usr/bin"x ]; then
        mkdir --parents "${pkgdir}/usr/bin"
        cd "${pkgdir}/usr/bin" && {
            ln -s "${_instdir}"/bin/aeskulap .
        } || return 22
    fi
}
