package() {
  HOME=/tmp gem install \
    --no-user-install \
    --no-document \
    --ignore-dependencies \
    --install-dir "${pkgdir}/$(ruby -e 'puts Gem.default_dir')" \
    --bindir "${pkgdir}/usr/bin" \
    "${srcdir}/${pkgname}-${pkgver}.gem"
  install -Dm 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
