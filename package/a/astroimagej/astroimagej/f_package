package() {
	
	cd ${srcdir}
	tarfile="AstroImageJ_v${pkgver}_${_reldate}_linux.tar.gz"

	mkdir ${pkgdir}/opt
	cp $tarfile ${pkgdir}/opt
	cd ${pkgdir}/opt
	tar zxvf $tarfile
	rm $tarfile
	mv ${pkgdir}/opt/AstroImageJ ${pkgdir}/opt/astroimagej

	cd ${srcdir}
	install -D -m755 aij ${pkgdir}/usr/bin/aij
  
}
