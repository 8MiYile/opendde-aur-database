build() {
    cat <<EOF > ape
#!/bin/sh
tclkit-dyn /opt/ApE/ApE.tcl $@
EOF

    cat <<EOF > ApE.desktop
[Desktop Entry]
Name=ApE
GenericName=A Plasmid Editor
Comment=a tcl/tk plasmid editor
Exec=ape
Icon=/opt/ApE/Accessory Files/Icons and images/ApE_icon_200.png
Terminal=false
Type=Application
Categories=Education;Science;Biology;
EOF
}
