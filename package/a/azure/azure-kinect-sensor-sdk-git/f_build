build() {
	pushd "$srcdir/${pkgname%-git}"
    mkdir -p build
    cd build
    cmake ..
    make -j$(nproc)
    popd

    # Reassemble and decompress libdepthengine.so.20
    # AUR has a 200 KB blob limit...
    cat ../libdepthengine.so.2.0.xz-part-{1,2,3} > libdepthengine.so.2.0.xz
    xz -df libdepthengine.so.2.0.xz
}
