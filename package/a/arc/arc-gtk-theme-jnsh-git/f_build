build() {
  cd "${_pkgname}"
  ./autogen.sh --prefix=/usr \
    --with-cinnamon=4.6 \
    --with-gnome-shell=3.36 \
    --with-gtk3=3.24
  make

  cd "${srcdir}"
  cp -a "${_pkgname}"{,-solid}

  cd "${_pkgname}-solid"
  ./autogen.sh --prefix=/usr \
    --with-cinnamon=4.6 \
    --with-gnome-shell=3.36 \
    --with-gtk3=3.24 \
    --disable-transparency
  make
}
