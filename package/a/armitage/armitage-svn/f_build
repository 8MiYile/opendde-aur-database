build() {
	cd ${srcdir}
	if [ -d ${_svnmod}/.svn ]; then
		svn up ${_svnmod}
	else
		svn co ${_svntrunk} ${_svnmod}
	fi

	rm -rf ${_svnmod}-build
	cp -r ${_svnmod} ${_svnmod}-build
	cd ${_svnmod}-build

	sed -i s+/usr/share/java/apache-ant/bin/++g package.sh
	bash package.sh
	echo "#!/bin/bash" > ${_svnmod}.sh
	echo "java -jar /opt/${_svnmod}/${_svnmod}.jar" >> ${_svnmod}.sh
}
