package() {
	cd "${srcdir}/boost_1_63_0"
    mkdir -p ${pkgdir}/usr/lib
	./b2 install --prefix=${pkgdir}/usr
    for FILE in $(ls "${pkgdir}/usr/lib" | grep .so$); do
        rm "${pkgdir}/usr/lib/${FILE}"
    done
    for FILE in $(ls "${pkgdir}/usr/lib" | grep .a$); do
        rm "${pkgdir}/usr/lib/${FILE}"
    done
    rm -r "${pkgdir}/usr/include"
}
