build() {
	mkdir -p build-binutils
	cd build-binutils
	unset CPPFLAGS
	../binutils-ia16-binutils-ia16-$pkgver/configure \
		--prefix=/usr \
		--target=ia16-elf \
		--disable-gdb \
		--disable-libdecnumber \
		--disable-readline \
		--disable-sim \
		--disable-nls \
		--disable-werror
	make configure-host
	make tooldir=/usr
}
