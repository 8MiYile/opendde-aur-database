package() {

	install -d "${pkgdir}/usr/bin" 
	install -d "${pkgdir}/usr/share/man/man1"
	install -d "${pkgdir}/run/balance"

	cd ${srcdir}/${pkgname}-${pkgver}
	install -D -m755  balance ${pkgdir}/usr/bin/
	install -D -m755  balance.1  ${pkgdir}/usr/share/man/man1/
	install -d  ${pkgdir}/run/balance
}
