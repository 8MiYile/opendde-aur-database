prepare() {
  cd ${pkgname//-git/}

  IFS_OLD=$IFS
  IFS=$'\n'
  for line in $(git config --file=.gitmodules --get-regexp submodule..\*.url)
  do
    git config --file=.gitmodules $(echo $line | cut -d ' ' -f 1) $(echo $line | cut -d ' ' -f 2 | sed s/git:/https:/)
  done
  IFS=IFS_OLD

  sh autogen.sh
  patch -p1 -i "${srcdir}"/remove-dangerous-rpath.patch
}
