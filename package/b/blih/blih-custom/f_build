build() {
        cd "${pkgname}"
	mv "${pkgname}.py" "${pkgname}"
        if [[ -z "${BLIH_USER}" ]]; then
            echo "Please define BLIH_USER env var to your epitech mail address (firstname.lastname@epitech.eu)"
            exit 1
        fi
        sed -i "s|BLIH_USER|\"$BLIH_USER\"|" "${pkgname}"
	chmod 755 "${pkgname}"
        mv "${pkgname}" "blih"
}
