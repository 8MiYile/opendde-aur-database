build() {
  msg 'Getting sources...'
  if [ -d $_gitname ]; then
    cd $_gitname
    git pull origin
  else
    git clone $_gitroot
    cd $_gitname
  fi
  msg 'GIT checkout done or server timeout'
  msg 'Starting make...'

  # non-interactive, uses defaults
  perl Build.PL < /dev/null

  ./Build
}
