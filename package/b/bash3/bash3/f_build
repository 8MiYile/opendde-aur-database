build() {
  cd "$srcdir/bash-3.2"
  for p in ../bash32-*; do
    msg "applying patch $p"
    patch -Np0 < "$p"
  done

  ./configure --prefix=/usr --with-curses --enable-readline \
    --without-bash-malloc --with-installed-readline

  sed -i '/HAVE_SETDTABLESIZE/d; /HAVE_SETOSTYPE/d' config.h

  make
}
