prepare() {
    # Apply maintainer patches
    cd "${srcdir}/${pkgbase}"
    local _src
    local _patch="patch -N -t -p0 -l --no-backup-if-mismatch -i"
    for _src in "${source[@]}"; do
        _src="${_src%%::*}"
        _src="${_src##*/}"
        [[ $_src = *.patch ]] || continue
        echo "Applying patch $_src..."
        $_patch "../$_src"
    done
}
