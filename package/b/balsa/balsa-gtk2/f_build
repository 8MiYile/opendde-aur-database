build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"

  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --with-html-widget=webkit \
      --with-gtksourceview=yes \
      --with-canberra=yes \
      --with-gnome=no \
      --with-gss=yes \
      --with-nm=no \
      --with-ssl=yes
  make
}
