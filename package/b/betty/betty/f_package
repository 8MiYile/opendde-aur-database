package() {
  cd "${srcdir}/${pkgname}-"*
  #cd "${srcdir}/${pkgname}-${pkgver}"

  install -d "${pkgdir}/etc/${pkgname}"

  install -Dm666 /dev/null "${pkgdir}/var/log/${pkgname}/betty_history"
  install -D main.rb "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 lib/* -t "${pkgdir}/usr/lib/${pkgname}"
}
