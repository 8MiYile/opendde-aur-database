build() {
  cp -ar $srcdir/$_gitname $srcdir/build
  cp     $srcdir/config    $srcdir/build/.config
  cd     $srcdir/build

  CC=musl-gcc                             \
  HOSTCC=gcc                              \
  CFLAGS='-Os -static'                    \
  HOSTCFLAGS='-D_POSIX_C_SOURCE=200112L'  \
  CFLAGS_busybox="-Wl,-z,muldefs"         \
  make
}
