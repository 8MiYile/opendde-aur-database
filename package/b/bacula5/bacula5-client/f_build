build() {
	cd bacula-${pkgver}/
  CPPFLAGS=-I/usr/include/openssl-1.0/
  LIBS=-L/usr/lib/openssl-1.0/
  
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --enable-client-only \
    --with-systemd=/usr/lib/systemd/system/ \
    --with-openssl=/usr/lib/openssl-1.0/ \
    --sysconfdir=/etc/bacula \
    --with-scriptdir=/etc/bacula/scripts
	
  make
}
