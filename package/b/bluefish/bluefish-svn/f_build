build() {
  cd "${srcdir}"/bluefish

  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --with-freedesktop_org-menu=/usr/share/applications \
    --with-freedesktop_org-mime=/usr/share/mime \
    --with-icon-path=/usr/share/pixmaps \
	--enable-spell-check \
    --disable-update-databases \
    --disable-xml-catalog-update
  make
}
