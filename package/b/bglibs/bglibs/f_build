build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  echo "/usr/bin" > conf-bin
  echo "/usr/include" > conf-include
  echo "/usr/lib" > conf-lib
  echo "/usr/share/man" > conf-man
  sed -i "1s/\$/ $(echo -n $CFLAGS | sed 's/[\/&]/\\&/g')/" conf-cc
  sed -i "1s/\$/ $(echo -n $LDFLAGS | sed 's/[\/&]/\\&/g')/" conf-ld

  make
}
