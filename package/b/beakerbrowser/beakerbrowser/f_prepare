prepare() {
	
	msg_blue "Connecting to git server..."
	msg_blue "Please wait ..."	
	
	if [[ -d "$srcdir/$_pkgname" ]]; then
        	(cd "$_pkgname" && git pull origin master) || return 1
        	msg_blue "Repository updated"
	else
		git clone "$url.git" || return 1
		msg "Repository cloned"
		ls
		sleep 2
		pwd
		sleep 2
		
	fi

}
