package() {
  _blender=$(pacman -Sddp --print-format %v blender|grep -oP '(?<=\:)[[:digit:]]{1}\.[[:digit:]]{2}(?=\.)')
  cd ${srcdir}/${name}
  addons="$pkgdir/usr/share/blender/${_blender}/scripts/addons"
  for file in ${files}
  do
    msg "install -D -m 644 -t ${addons} ${file}"
    install -D -m 644 -t ${addons} ${file}
  done
}
