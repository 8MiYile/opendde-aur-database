package() {

	_version=$(blender --version | sed -E -n -e 's/.*([0-9]+\.[0-9]+)\.[0-9]+.*/\1/p')

	_addons="$pkgdir/usr/share/blender/$_version/scripts/addons/cad-sketcher"

	cd "$srcdir/$(ls -d */)"

	if [ ! -d "$_addons" ]; then
		mkdir -p "$_addons"
	fi

	for i in *; do
		cp -r "$i" "$_addons"
	done
}
