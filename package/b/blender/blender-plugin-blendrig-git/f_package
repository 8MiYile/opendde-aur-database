package() {
  	cd "$srcdir/$_gitname-build"
	pwd
    addons="$pkgdir/usr/share/blender/$(blender -v | head -n1 | cut -f2 -d ' ')/scripts/addons/"
    if [ ! -d "$addons" ]; then
        mkdir -p "$addons"
    fi
	[ -d "${addons}${_gitname}" ] || mkdir "${addons}${_gitname}"
	cp -r "$srcdir/$_gitname-build/"* "${addons}${_gitname}"
}
