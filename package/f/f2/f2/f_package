package() {
          cd $pkgname-$pkgname-$pkgver
          make \
            MANDIR=/usr/local/man \
            DESTDIR=$pkgdir \
            E2_GROUP=$(id -gn) \
            install
          make \
            DESTDIR=$pkgdir \
            MANDIR=/usr/local/man \
            E2_GROUP=$(id -gn) \
            install-doc
          install -D -m644 $srcdir/LICENSE        $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
