build() {
  cd $pkgname

  ./configure --prefix=/usr \
              --with-root-prefix="" \
              --libdir=/usr/lib \
              --sbindir=/usr/bin \
              --enable-elf-shlibs \
              --disable-fsck \
              --disable-uuidd \
              --disable-libuuid \
              --disable-libblkid \
              --enable-blkid-debug \
              --enable-verbose-makecmds \
              --enable-e2initrd-helper
              #--enable-jbd-debug  # this likes to break the build

  make

  # regenerate locale files
  find po/ -name '*.gmo' -delete
  make -C po update-gmo
}
